<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Greeting group -->
    <ImageView
        android:id="@+id/apptentive_message_center_greeting_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?apptentiveMessageCenterGreetingHeaderStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder_message_homescreen"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/apptentive_message_center_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?apptentiveMessageCenterGreetingStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apptentive_message_center_greeting_header"
        tools:text="Hello!"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/apptentive_message_center_greeting_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?apptentiveMessageCenterGreetingBodyTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apptentive_message_center_greeting"
        tools:text="We'd love to hear from you. Please provide detailed feedback or information about your issue."/>

</androidx.constraintlayout.widget.ConstraintLayout>