    <style name="Custom.LoveDialog.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Custom.Note.Title.WithMessage.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
    </style>

    <style name="Custom.Note.Message.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">8sp</item>
    </style>

