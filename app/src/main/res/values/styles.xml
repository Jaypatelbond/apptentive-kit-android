    <style name="Custom.Dialog.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/color_error</item>
        <item name="strokeWidth">4dp</item>
    </style>
    <!-- Dialog Widgets End -->

    <!-- Survey Widgets Start -->
    <style name="Custom.Survey.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/color_secondary</item>
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
        <item name="navigationContentDescription">Back</item>
        <item name="navigationIconTint">@color/color_error</item>
    </style>

    <style name="Custom.Survey.HeaderImage">
        <item name="android:src">@drawable/example_logo</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:maxHeight">?actionBarSize</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Custom.Survey.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:buttonTint">@color/color_secondary</item>
    </style>

    <style name="Custom.Survey.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:buttonTint">@color/color_secondary</item>
    </style>

    <style name="Custom.Survey.Range" parent="Widget.MaterialComponents.Slider">
        <item name="labelBehavior">withinBounds</item>
        <item name="haloColor">@color/color_error</item>
        <item name="thumbColor">@color/color_error</item>
        <item name="trackColorActive">@color/color_secondary</item>
        <item name="trackColorInactive">@color/color_secondary</item>
        <item name="tickColorActive">@color/color_primary</item>
        <item name="tickColorInactive">@color/color_primary</item>
    </style>

    <style name="Custom.Survey.SingleLine.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@drawable/ic_round_info</item>
        <item name="boxStrokeColor">@color/color_error</item>
        <item name="android:textColorHint">@color/color_secondary</item>
    </style>

    <style name="Custom.Survey.SingleLine.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Custom.Survey.OtherTextField.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@drawable/ic_round_info</item>
        <item name="boxStrokeColor">@color/color_error</item>
        <item name="android:textColorHint">@color/color_secondary</item>
    </style>

    <style name="Custom.Survey.OtherTextField.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Custom.Survey.Submit.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:backgroundTint">?colorError</item>
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="Custom.Survey.BottomAppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/color_secondary</item>
    </style>
