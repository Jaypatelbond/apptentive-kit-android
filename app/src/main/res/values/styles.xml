    <style name="Custom.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="backgroundTint">?colorError</item>
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="Custom"/>

    <style name="Custom.Note"/>

    <style name="Custom.Note.Layout">
        <item name="android:background">@color/color_error</item>
    </style>

    <style name="Custom.Note.Title.WithMessage.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
    </style>

    <style name="Custom.Note.Title.NoMessage.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Custom.Note.Message.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Custom.RatingDialog"/>

    <style name="Custom.RatingDialog.Layout">
        <item name="android:background">@color/color_error</item>
    </style>

    <style name="Custom.RatingDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
    </style>

    <style name="Custom.RatingDialog.Message.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Custom.Dialog"/>

    <style name="Custom.Dialog.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/color_error</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="Custom.Dialog.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Custom.LoveDialog"/>

    <style name="Custom.LoveDialog.Layout">
        <item name="android:background">@color/apptentive_color_error</item>
    </style>

    <style name="Custom.LoveDialog.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

