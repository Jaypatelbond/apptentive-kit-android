<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ApptentiveThemeTemplate">

        <!-- Notes -->
        <attr name="apptentiveNoteLayoutStyle" format="reference" />
        <attr name="apptentiveNoteTitleWithMessageTextStyle" format="reference" />
        <attr name="apptentiveNoteTitleNoMessageTextStyle" format="reference" />
        <attr name="apptentiveNoteMessageTextStyle" format="reference" />

        <!-- Apptentive Rating Dialog -->
        <attr name="apptentiveRatingDialogLayoutStyle" format="reference" />
        <attr name="apptentiveRatingDialogTitleTextStyle" format="reference" />
        <attr name="apptentiveRatingDialogMessageTextStyle" format="reference" />

        <!-- Survey -->
        <attr name="apptentiveSurveySubmitButtonStyle" format="reference" />

        <!-- Text Size -->
        <attr name="apptentiveTextSizeTitle" format="dimension|reference" />
        <attr name="apptentiveTextSizeTitleNoMessage" format="dimension|reference" />
        <attr name="apptentiveTextSizeMessage" format="dimension|reference" />
        <attr name="apptentiveTextSizeButtonBorderless" format="dimension|reference" />

        <!-- Text Color -->
        <attr name="apptentiveTextColorTitle" format="color|reference"/>
        <attr name="apptentiveTextColorTitleNoMessage" format="color|reference"/>
        <attr name="apptentiveTextColorMessage" format="color|reference"/>
        <attr name="apptentiveInteractionButtonColorDefault" format="color|reference"/>

        <!-- Typeface -->
        <attr name="apptentiveTypefaceDefault" format="integer|reference"/>
        <attr name="apptentiveTypefaceTitle" format="enum|reference" />
        <attr name="apptentiveTypefaceTitleNoMessage" format="enum|reference" />
        <attr name="apptentiveTypefaceMessage" format="enum|reference" />
        <attr name="apptentiveTypefaceButtonBorderless" format="enum|reference" />

        <!--- AlertDialog style -->
        <attr name="apptentiveDialogTitleStyle" format="reference" />
        <attr name="apptentiveInteractionButtonStyle" format="reference"/>
        <attr name="apptentiveDialogBackground" format="color|reference" />

        <!--- LoveDialog style -->
        <attr name="apptentiveLoveDialogLayoutStyle" format="color|reference" />
        <attr name="apptentiveLoveDialogTitleStyle" format="reference" />

    </declare-styleable>

</resources>