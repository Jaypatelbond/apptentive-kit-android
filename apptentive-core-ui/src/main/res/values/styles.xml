<resources>
    <!-- Base Apptentive theme. -->
    <style name="Theme.Apptentive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/apptentive_color_primary</item>
        <item name="colorOnPrimary">@color/apptentive_color_on_primary</item>
        <item name="colorPrimaryVariant">@color/apptentive_color_primary_variant</item>
        <item name="colorSecondary">@color/apptentive_color_secondary</item>
        <item name="colorSecondaryVariant">@color/apptentive_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/apptentive_color_on_secondary</item>
        <item name="android:colorBackground">@color/apptentive_color_background</item>
        <item name="colorOnBackground">@color/apptentive_color_on_background</item>
        <item name="android:textColorSecondary">@color/apptentive_color_text_color_secondary</item>
        <item name="colorError">@color/apptentive_color_error</item>
    </style>

    <style name="Theme.Apptentive.Dialog.Alert" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Apptentive.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <style name="Theme.Apptentive.ToolbarTitle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

</resources>
