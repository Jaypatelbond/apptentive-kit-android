<resources>
    <!-- Base Apptentive theme. -->
    <style name="Theme.Apptentive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/apptentive_color_primary</item>
        <item name="colorOnPrimary">@color/apptentive_color_on_primary</item>
        <item name="colorPrimaryVariant">@color/apptentive_color_primary_variant</item>
        <item name="colorSecondary">@color/apptentive_color_secondary</item>
        <item name="colorSecondaryVariant">@color/apptentive_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/apptentive_color_on_secondary</item>
        <item name="android:colorBackground">@color/apptentive_color_background</item>
        <item name="colorOnBackground">@color/apptentive_color_on_background</item>
        <item name="android:textColorSecondary">@color/apptentive_color_text_color_secondary</item>
        <item name="colorError">@color/apptentive_color_error</item>

        <!-- Note Styles-->
        <item name="apptentiveNoteLayoutStyle">@style/Apptentive.Note.Layout</item>
        <item name="apptentiveNoteTitleWithMessageTextStyle">@style/Apptentive.TextAppearance.Title.WithMessage</item>
        <item name="apptentiveNoteTitleNoMessageTextStyle">@style/Apptentive.TextAppearance.Title.NoMessage</item>
        <item name="apptentiveNoteMessageTextStyle">@style/Apptentive.TextAppearance.Subhead.Secondary</item>

        <!-- Apptentive Rating Dialog Styles-->
        <item name="apptentiveRatingDialogLayoutStyle">@style/Apptentive.RatingDialog.Layout</item>
        <item name="apptentiveRatingDialogTitleTextStyle">@style/Apptentive.TextAppearance.Title</item>
        <item name="apptentiveRatingDialogMessageTextStyle">@style/Apptentive.TextAppearance.Subhead.Secondary</item>

        <!-- Survey Styles-->
        <item name="apptentiveSurveySubmitButtonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Text Size -->
        <item name="apptentiveTextSizeTitle">@dimen/apptentive_text_size_title</item>
        <item name="apptentiveTextSizeTitleNoMessage">@dimen/apptentive_text_size_default</item>
        <item name="apptentiveTextSizeMessage">@dimen/apptentive_text_size_default</item>
        <item name="apptentiveTextSizeButtonBorderless">@dimen/apptentive_text_size_default</item>

        <!-- Text Color -->
        <item name="apptentiveTextColorTitle">@color/apptentive_color_text_title</item>
        <item name="apptentiveTextColorTitleNoMessage">@color/apptentive_color_text_default</item>
        <item name="apptentiveTextColorMessage">@color/apptentive_color_text_default</item>
        <item name="apptentiveInteractionButtonColorDefault">?colorPrimary</item>

        <!-- Typeface -->
        <item name="apptentiveTypefaceDefault">@integer/apptentive_typeface_normal</item>

        <item name="apptentiveTypefaceTitle">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceTitleNoMessage">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceMessage">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceButtonBorderless">?apptentiveTypefaceDefault</item>

        <!--- LoveDialog -->
        <item name="apptentiveLoveDialogLayoutStyle">@style/Apptentive.LoveDialog.Layout</item>
        <item name="apptentiveLoveDialogTitleStyle">@style/Apptentive.TextAppearance.Title.NoMessage</item>

        <!--- AlertDialog general -->
        <item name="apptentiveInteractionButtonStyle">@style/Apptentive.Widget.Button.Borderless</item>
        <item name="apptentiveDialogBackground">@color/apptentive_dialog_background_color</item>
    </style>

    <!-- This style has been a problem within our UI and will be disabled by default -->
    <!-- Can be re-enabled by using ApptentiveThemeOverride -->
    <style name="DisableAndroidBackgroundStyle">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Apptentive.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <style name="Theme.Apptentive.ToolbarTitle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Apptentive" />

    <style name="Apptentive.Note" />

    <style name="Apptentive.Note.Layout">
        <item name="android:background">?apptentiveDialogBackground</item>
    </style>

    <style name="Apptentive.RatingDialog" />

    <style name="Apptentive.RatingDialog.Layout">
        <item name="android:background">?apptentiveDialogBackground</item>
    </style>

    <style name="Apptentive.LoveDialog" />

    <style name="Apptentive.LoveDialog.Layout">
        <item name="android:background">?apptentiveDialogBackground</item>
    </style>

    <style name="Apptentive.TextAppearance.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:typeface">?attr/apptentiveTypefaceTitle</item>
        <item name="android:textSize">?attr/apptentiveTextSizeTitle</item>
        <item name="android:textColor">?attr/apptentiveTextColorTitle</item>
    </style>

    <style name="Apptentive.TextAppearance.Title.WithMessage" parent="Apptentive.TextAppearance.Title" />

    <style name="Apptentive.TextAppearance.Title.NoMessage" parent="Apptentive.TextAppearance.Title">
        <item name="android:typeface">?attr/apptentiveTypefaceTitleNoMessage</item>
        <item name="android:textSize">?attr/apptentiveTextSizeTitleNoMessage</item>
        <item name="android:textColor">?attr/apptentiveTextColorTitleNoMessage</item>
    </style>

    <style name="Apptentive.TextAppearance.Subhead.Secondary" parent="Widget.MaterialComponents.TextView">
        <item name="android:typeface">?attr/apptentiveTypefaceMessage</item>
        <item name="android:textSize">?attr/apptentiveTextSizeMessage</item>
        <item name="android:textColor">?attr/apptentiveTextColorMessage</item>
    </style>

    <!-- Button style with no border but text, example: buttons on Enjoyment Prompt-->
    <style name="Apptentive.Widget.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:typeface">?attr/apptentiveTypefaceButtonBorderless</item>
        <item name="android:textColor">?attr/apptentiveInteractionButtonColorDefault</item>
        <item name="android:textSize">?attr/apptentiveTextSizeButtonBorderless</item>
    </style>

</resources>
