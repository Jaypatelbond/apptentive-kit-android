<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?apptentiveRatingDialogLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingTop="18dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/apptentive_rating_dialog_title"
            style="?apptentiveRatingDialogTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/apptentive_dialog_title_horizontal_padding"
            android:paddingBottom="8dp"
            tools:text="Rating Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/apptentive_rating_dialog_message"
            style="?apptentiveRatingDialogMessageTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/apptentive_dialog_message_min_height"
            android:paddingHorizontal="@dimen/apptentive_dialog_message_horizontal_padding"
            tools:text="Rating Message" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apptentive_rating_dialog_button"
            style="?apptentiveDialogButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/apptentive_dialog_action_spacing"
            android:layout_marginTop="@dimen/apptentive_dialog_action_spacing"
            android:textAlignment="viewEnd"
            tools:text="RATE ANDROID DEMO APP"
            tools:textColor="@color/apptentive_color_on_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apptentive_rating_dialog_remind_button"
            style="?apptentiveDialogButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/apptentive_dialog_action_spacing"
            android:textAlignment="viewEnd"
            tools:text="REMIND ME LATER"
            tools:textColor="@color/apptentive_color_on_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apptentive_rating_dialog_decline_button"
            style="?apptentiveDialogButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/apptentive_dialog_action_spacing"
            android:layout_marginBottom="@dimen/apptentive_dialog_action_spacing"
            android:textAlignment="viewEnd"
            tools:text="NO THANKS"
            tools:textColor="@color/apptentive_color_on_background" />

    </LinearLayout>

</ScrollView>