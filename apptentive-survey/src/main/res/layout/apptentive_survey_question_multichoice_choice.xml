<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/apptentive_radiobutton"
        style="?attr/apptentiveSurveyRadioButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/apptentive_radio_checkbox_slider_margin"
        android:minHeight="@dimen/apptentive_radio_checkbox_min_height"
        android:paddingHorizontal="@dimen/apptentive_radio_checkbox_horizontal_padding"
        tools:text="Radio Button example"
        tools:textColor="@color/apptentive_color_on_background" />

    <include layout="@layout/apptentive_survey_question_text_input" />
</LinearLayout>